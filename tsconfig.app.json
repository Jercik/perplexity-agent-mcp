{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    /* Not running in the DOM */
    "lib": ["es2022"],
    "types": ["node"],

    /* Not transpiling with TypeScript */
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx",
    "node_modules",
    "dist"
  ]
}
